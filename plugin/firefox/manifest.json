{
    "manifest_version": 2,
    "name": "Transcert",
    "version": "1.0",

    "browser_specific_settings": {
        "gecko": {
            "id": "smishra99.iitkgp@gmail.com",
            "strict_min_version": "61.0"
        }
    },

    "description": "Scans if the certificate is not victim according to Certi-SANs project",

    "icons": {
        "32": "icons/transcert.png"
    },

    "background": {
        "scripts": ["scancert.js"]
    },

    "browser_action": {
        "default_icon": "icons/transcert.png",
        "default_title": "Transcert",
        "default_popup": "popup.html"
    },

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://*/*",
        "activeTab",
        "storage",
        "tabs"
    ]
}